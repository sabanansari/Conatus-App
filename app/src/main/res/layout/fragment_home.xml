<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ibgi"
    android:theme="@style/ThemeOverlay.AppCompat.Light" >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/iconatus_img"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:src="@drawable/iconatus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/iconatus_img"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/techi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Who We Are"
            android:textColor="#f0fff0"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="#660000"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_conatus"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textStyle="normal"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="258dp"
        android:src="@drawable/ilaughteam"
        android:layout_marginTop="8dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/iconatus_img"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/techi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="What We Do"
            android:textColor="#f0fff0"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="#660000"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_conatus"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textStyle="normal"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="258dp"
        android:src="@drawable/seniors"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>




</LinearLayout>



</ScrollView>